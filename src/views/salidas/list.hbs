<div class="container">
  <div class="row bg-dark text-light mt-4"><h3 class="text-center">Lista de Salidas</h3></div>
  <div class="row m-2">
    <div class="col-1"><p>Filtrar por:</p></div>
    <div class="col-2"> <select type="text" class="form-control " name="tipo" id="tipolist" onchange=""><option value="0"></option>{{#each tipo}}<option value="{{id}}">{{nombre}}</option> {{/each}}</select></div>
