        <td ><a href="./view/{{ID}}"  target="_blank"><img src='..\\img\\view.jpg' alt='' height ='30' width='30'/></a><a href="./print/{{ID}}" class="p-2" target="_blank" ><img src='..\\img\\print.jpg' alt='' height ='30' width='30' /></a></td>
