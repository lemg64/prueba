{{#if success}}
        <div class="container alert-exit p-3" id="alert">
            <div class="row">
                <div class="col-md-12 mx-auto">
                    <div class=" alert-dismissible fade show" style="text-white-space: nowrap;" role="alert">

                      <h6> {{success}}
                        <button type="button" class="clos" data-dismiss="alert" aria-label="Close" id="close-alert" onclick="cerrar()" >
                            
                            <span aria-hidden="true">&times;</span>
                            
                        </button>
                      </h6>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}

        {{#if message}}
        <div class="container alert-exit p-4">
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">

                        {{message}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                </div>
            </div>
        </div>
        {{/if}}