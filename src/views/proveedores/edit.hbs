<body>
    

<div class="container m-4 p-4" id="container-login" >
<div class="card  col-sm-9 col-lg-3 col-md-6 col-lg-5 col-xl-4 mt-10 mx-auto">
    <div class="card-header">
        <div class="card-title">
        <h4>Editar Proveedor</h4>
        </div>
    </div>
    <div class="card-body ">
        <form action="/proveedores/editar/{{proveedor.id}}" method="POST" class="mt-4">
        <div class="m-4">
        <input type="text" value="{{proveedor.nombre}}" class="form-control m-auto" name="nombre" placeholder="Nombre" autofocus>
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.nit}}" class="form-control m-auto" name="nit" placeholder="Nit">
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.asesor}}" class="form-control m-auto" name="asesor" placeholder="Asesor">
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.telefono}}" class="form-control m-auto" name="telefono" placeholder="Teléfono">
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.telefono2}}" class="form-control m-auto" name="telefono2" placeholder="Teléfono2">
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.direccion}}" class="form-control m-auto" name="direccion" placeholder="Dirección">
        </div>
        <div class="m-4">
        <input type="text" value="{{proveedor.ciudad}}" class="form-control m-auto" name="ciudad" placeholder="Ciudad">
        </div>
        <div class="m-4">
        <input type="mail" value="{{proveedor.correo}}"  class="form-control" name="correo" placeholder="Correo: example@tucorreo.com">
        </div>
        <div class="m-4">
        <input class="form-control" name="referenciadoPor" placeholder="Referenciado por: ">
        </div>
        
        <div class="d-grid gap-2">
        <button class="btn btn-success btn-block">Editar</button>
        <a class="btn btn-secondary btn-block" href="/">Cancelar</a>
        </div>
        </form>
    </div>
    
</div>
</div>
</body>